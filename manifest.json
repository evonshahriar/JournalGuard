{
  "manifest_version": 3,
  "name": "JournalGuard",
  "version": "1.0",
  "description": "Alerts you to predatory academic journals, ensuring you only access credible research sources.",
  "permissions": ["activeTab", "webNavigation", "tabs", "storage"],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
      }
  }
}
